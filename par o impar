#include <iostream>
#include <cstdlib>
#include <ctime>
using namespace std;

int main() {
    srand(time(0));
    int numCPU = rand() % 100 + 1;
    string eleccion;

    cout << "¿Crees que el número es par o impar? ";
    cin >> eleccion;

    bool par = numCPU % 2 == 0;
    cout << "Número generado: " << numCPU << endl;

    if ((par && eleccion == "par") || (!par && eleccion == "impar"))
        cout << "¡Correcto!" << endl;
    else
        cout << "¡Incorrecto!" << endl;

    return 0;
}
